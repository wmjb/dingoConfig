{
  "info": {
    "name": "dingoConfig API",
    "description": "dingoConfig - CAN Device Configuration and Monitoring API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Adapter Management",
      "item": [
        {
          "name": "Get Available Adapters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/adapter/available",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "adapter",
                "available"
              ]
            },
            "description": "Get available adapters and ports\n\nReturns a list of CAN adapters that can be connected to and their available ports."
          },
          "response": [
            {
              "name": "200 OK",
              "originalRequest": {
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/api/adapter/available",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "api",
                    "adapter",
                    "available"
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"adapters\": [\n    \"USB\",\n    \"SLCAN\",\n    \"PCAN\",\n    \"Simulated\"\n  ],\n  \"ports\": [\n    \"/dev/ttyUSB0\",\n    \"COM3\"\n  ]\n}"
            }
          ]
        },
        {
          "name": "Get Adapter Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/adapter/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "adapter",
                "status"
              ]
            },
            "description": "Get current adapter connection status\n\nReturns the connection status of the currently active adapter."
          },
          "response": [
            {
              "name": "200 OK",
              "originalRequest": {
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/api/adapter/status",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "api",
                    "adapter",
                    "status"
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"isConnected\": true,\n  \"adapterType\": \"USB\",\n  \"port\": \"/dev/ttyUSB0\",\n  \"bitrate\": \"500K\",\n  \"lastUpdated\": \"2025-11-13T12:00:00Z\"\n}"
            }
          ]
        },
        {
          "name": "Connect to Adapter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"adapterType\": \"USB\",\n  \"port\": \"/dev/ttyUSB0\",\n  \"bitrate\": \"500K\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/adapter/connect",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "adapter",
                "connect"
              ]
            },
            "description": "Connect to a CAN adapter\n\nInitialize and start a CAN communication adapter. Supported adapter types: USB, SLCAN, PCAN, Simulated. Supported bitrates: 125K, 250K, 500K, 1000K."
          },
          "response": [
            {
              "name": "200 OK - Connected",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  },
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"adapterType\": \"USB\",\n  \"port\": \"/dev/ttyUSB0\",\n  \"bitrate\": \"500K\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/adapter/connect",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "api",
                    "adapter",
                    "connect"
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"message\": \"Connected successfully\",\n  \"adapterType\": \"USB\",\n  \"port\": \"/dev/ttyUSB0\"\n}"
            },
            {
              "name": "400 Bad Request",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"adapterType\": \"InvalidAdapter\",\n  \"port\": \"\",\n  \"bitrate\": \"9600K\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/adapter/connect",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "api",
                    "adapter",
                    "connect"
                  ]
                }
              },
              "status": "Bad Request",
              "code": 400,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"type\": \"https://tools.ietf.org/html/rfc7231#section-6.5.1\",\n  \"title\": \"One or more validation errors occurred.\",\n  \"status\": 400,\n  \"errors\": {\n    \"AdapterType\": [\"AdapterType must be one of: USB, SLCAN, PCAN, Simulated\"],\n    \"Bitrate\": [\"Bitrate must match pattern: ^(125K|250K|500K|1000K)$\"]\n  }\n}"
            },
            {
              "name": "500 Internal Server Error",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"adapterType\": \"USB\",\n  \"port\": \"/dev/ttyUSB0\",\n  \"bitrate\": \"500K\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/adapter/connect",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "api",
                    "adapter",
                    "connect"
                  ]
                }
              },
              "status": "Internal Server Error",
              "code": 500,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"type\": \"https://tools.ietf.org/html/rfc7231#section-6.6.1\",\n  \"title\": \"Connection Failed\",\n  \"status\": 500,\n  \"detail\": \"Unable to connect to adapter 'USB' on port '/dev/ttyUSB0'\"\n}"
            }
          ]
        },
        {
          "name": "Disconnect from Adapter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/adapter/disconnect",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "adapter",
                "disconnect"
              ]
            },
            "description": "Disconnect from current adapter\n\nStop and clean up the currently active CAN adapter connection."
          },
          "response": [
            {
              "name": "200 OK",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/api/adapter/disconnect",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "api",
                    "adapter",
                    "disconnect"
                  ]
                }
              },
              "status": "OK",
              "code": 200,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"message\": \"Disconnected successfully\"\n}"
            },
            {
              "name": "500 Internal Server Error",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/api/adapter/disconnect",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "api",
                    "adapter",
                    "disconnect"
                  ]
                }
              },
              "status": "Internal Server Error",
              "code": 500,
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"type\": \"https://tools.ietf.org/html/rfc7231#section-6.6.1\",\n  \"title\": \"Disconnection Error\",\n  \"status\": 500,\n  \"detail\": \"Error message details\"\n}"
            }
          ]
        }
      ]
    }
  ]
}
