@page "/"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
    <MudPaper Elevation="0" Class="pa-6">
        <MudStack Row="false" Justify="Justify.Center" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h3">dingoConfig</MudText>
            <MudText Typo="Typo.body1" Class="mb-4">
                Configure and monitor your devices
            </MudText>

            <MudGrid Justify="Justify.Center">
                <MudItem>
                    <MudCard Elevation="4" Style="width: 175px; height: 100%;">
                        <MudCardContent>
                            <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                                <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.Bolt"/>
                                <MudText Typo="Typo.h6">
                                    dingoPDM
                                </MudText>
                            </MudStack>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

                <MudItem>
                    <MudCard Elevation="4" Style="width: 175px; height: 100%;">
                        <MudCardContent>
                            <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                                <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.OfflineBolt"/>
                                <MudText Typo="Typo.h6">
                                    dingoPDM-Max
                                </MudText>
                            </MudStack>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

                <MudItem>
                    <MudCard Elevation="4" Style="width: 175px; height: 100%;">
                        <MudCardContent>
                            <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                                <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.DeveloperBoard"/>
                                <MudText Typo="Typo.h6">
                                    CANBoard
                                </MudText>
                            </MudStack>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

            </MudGrid>
        </MudStack>

        <MudDivider Class="my-6"/>

        <MudText Typo="Typo.h5" GutterBottom="true">Features</MudText>

        <MudList ReadOnly="true" T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.Cable">
                Connect to various comms adapters
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Memory">
                Add device(s) to configure and monitor
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Outlined.SaveAs">
                Save the devices to a config file
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Outlined.FolderOpen">
                Open devices from a config file
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Article">
                Monitor and export CAN traffic
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.ListAlt">
                Monitor and export system message logs
            </MudListItem>
        </MudList>
        
        <MudDivider Class="my-6"/>

        <MudText Typo="Typo.h6" GutterBottom="true">Getting Started</MudText>

        <MudList ReadOnly="true" T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.Cable">
                Select a comms adapter and connect
            </MudListItem>
            <MudListItem T="string" href="/devices" Icon="@Icons.Material.Filled.Memory">
                Add device(s)
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Outlined.SaveAs">
                Save the devices to a config file
            </MudListItem>
        </MudList>
    </MudPaper>
</MudContainer>
