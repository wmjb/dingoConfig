@page "/device/{DeviceId:guid}"
@using domain.Interfaces
@using domain.Devices.dingoPdm
@using domain.Devices.dingoPdmMax
@using domain.Devices.CanboardDevice
@using application.Services
@using api.Components.Shared
@inject DeviceStateService StateService
@implements IDisposable

<PageTitle>Device Monitor</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    @if (currentDevice != null)
    {
        @* Render appropriate view based on device type *@
        @switch (currentDevice)
        {
            case PdmMaxDevice pdmMaxDevice:
                <PdmMaxDeviceView Device="pdmMaxDevice"/>
                break;

            case PdmDevice pdmDevice:
                <PdmDeviceView Device="pdmDevice"/>
                break;

            case CanboardDevice canboardDevice:
                <CanboardDeviceView Device="canboardDevice" />
                break;

            default:
                <MudAlert Severity="Severity.Warning">
                    Unknown device type: @currentDevice.GetType().Name
                </MudAlert>
                break;
        }
    }
    else
    {
        <MudCard>
            <MudCardContent>
                <MudProgressCircular Indeterminate="true" />
                <MudText Class="ml-2">Loading device...</MudText>
            </MudCardContent>
        </MudCard>
    }
</MudContainer>

@code {
    [Parameter]
    public Guid DeviceId { get; set; }

    private IDevice? currentDevice;

    protected override void OnInitialized()
    {
        // Subscribe to state changes
        StateService.OnStateChanged += HandleStateChanged;

        // Get initial state
        currentDevice = StateService.GetDeviceState(DeviceId);
    }

    private void HandleStateChanged(Guid deviceId, IDevice device)
    {
        if (deviceId == DeviceId)
        {
            currentDevice = device;

            // Tell Blazor to re-render this component
            // InvokeAsync is required because this is called from a background thread
            InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        // Unsubscribe when component is disposed to prevent memory leaks
        StateService.OnStateChanged -= HandleStateChanged;
    }
}
